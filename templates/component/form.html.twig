{% block app_form %}
    {{ form_start(form) }}
    <div class="container">
        <h2 class="text-center">Enter new {{ formName }}</h2>
        <div class="my-custom-class-for-errors col-12">
            {{ form_errors(form) }}
        </div>

        <div class="col-12 mt-8">
            {% for child in form.children %}
                <div class="row col-12">
                    {{ form_row(child) }}
                </div>
            {% endfor %}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}